<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"><!--没点击按钮的时候-->
        <shape android:shape="rectangle"><!--按钮形状-->

            <solid android:color="#FFFFFF" /><!--按钮背景填充色-->
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" /><!--按钮边框-->

        </shape>
    </item>



    <!--当点击按钮的时候变为蓝色-->
    <item
        android:drawable="@color/cardview_shadow_start_color"
        android:state_pressed="true" >
    <shape android:shape="rectangle"><!--按钮形状-->
        <corners android:radius="10dp" />
        <stroke
            android:width="1dp"
            android:color="#000000" /><!--按钮边框-->
    </shape>
    </item>



    </selector>
